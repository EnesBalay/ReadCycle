@model List<EntityLayer.Concrete.BookAd>
@{
}
<div class="features_items">
    @if (Model?.Count > 0)
    {
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="@item.Images" alt="" />
                            <h2>@item.Price ₺</h2>
                            <p>@item.Title</p>
                            <h4 class="text-primary">@item.Book?.Name</h4>
                            <h5 class="text-warning">@item.User?.Name</h5>
                            <a href="/Advert/Index/@item.Id" class="btn btn-default add-to-cart">İlanı Gör</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <div class="panel panel-default ">
            <div class="panel-heading ">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordian" href="#">
                        İlan Bulunmamaktadır..
                    </a>
                </h4>
            </div>

        </div>
    }

</div>