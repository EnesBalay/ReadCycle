@model EntityLayer.Concrete.BookAd

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @await Component.InvokeAsync("LeftSidebar")
            </div>
            <div class="col-sm-9 padding-right">
                <div class="product-details">
                    <!--product-details-->
                    <div class="col-sm-5">
                        <div class="view-product">
                            <img src="@Model.Images" alt="" />
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="product-information">
                            <!--/product-information-->
                            <h2 class="text-primary" style="margin-bottom:0;">@Model.Title</h2>
                            <h3>@Model.Book?.Name</h3>
                            <p><b>İlan ID:</b> @Model.Id</p>
                            <p><b>Satıcı:</b> @Model.User.Name</p>
                            <h4>Kitap Bilgileri</h4>
                            <p><b>Baskı:</b> @Model.Book.Edition </p>
                            <p><b>İlk Yayın Tarihi:</b> @Model.Book.PublishedDate.ToShortDateString() </p>
                            <span>
                                <span>@Model.Price₺</span>
                                <button type="button" class="btn btn-fefault cart">
                                    Mesaj Gönder
                                </button>
                            </span>
                        </div><!--/product-information-->
                    </div>
                </div><!--/product-details-->
                <div class="recommended_items">
                    <!--recommended_items-->
                    <h2 class="title text-center">Önerilenler</h2>

                    <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="item active">
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/images/home/product4.jpg" alt="" />
                                                <h2>20₺</h2>
                                                <p>Hoşgör Köftecisi - Orhan Veli</p>
                                                <a href="/Product/Index" class="btn btn-default add-to-cart">İlanı Gör</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/images/home/product5.jpg" alt="" />
                                                <h2>20₺</h2>
                                                <p>Tarık - Abdülhak Hamit Tarhan</p>
                                                <a href="/Product/Index" class="btn btn-default add-to-cart">İlanı Gör</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/images/home/product6.jpg" alt="" />
                                                <h2>20₺</h2>
                                                <p>Tutunamayanlar - Oğuz Atay</p>
                                                <a href="/Product/Index" class="btn btn-default add-to-cart">İlanı Gör</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/images/home/product1.jpg" alt="" />
                                                <h2>20₺</h2>
                                                <p>Yalnız Seni Arıyorum - Orhan Veli</p>
                                                <a href="/Product/Index" class="btn btn-default add-to-cart">İlanı Gör</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/images/home/product2.jpg" alt="" />
                                                <h2>20₺</h2>
                                                <p>Araba Sevdası - R.Mahmut Ekrem</p>
                                                <a href="/Product/Index" class="btn btn-default add-to-cart">İlanı Gör</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/images/home/product3.jpg" alt="" />
                                                <h2>20₺</h2>
                                                <p>Sarı Sıcak - Yaşar Kemal</p>
                                                <a href="/Product/Index" class="btn btn-default add-to-cart">İlanı Gör</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div><!--/recommended_items-->

            </div>
        </div>
    </div>
</section>